<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ppm_fe.Views.HomePages.FestHomePage"
             xmlns:converter="clr-namespace:ppm_fe.Converters"
             Shell.NavBarIsVisible="{OnPlatform Android=true, WinUI=false}"
             xmlns:vm="clr-namespace:ppm_fe.ViewModels.HomePages"
             Title="Startseite">

    <ContentPage.Resources>
        <converter:InverseBoolConverter x:Key="InverseBoolConverter" />
    </ContentPage.Resources>

    <Grid>
        <Grid.Background>
            <DynamicResource Key="GradientBrush" />
        </Grid.Background>

        <!-- Connectivity bar -->
        <Grid VerticalOptions="Start"
          ZIndex="1"
          RowDefinitions="Auto"
          BackgroundColor="Red" 
          IsVisible="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}">
            <Label Text="Keine Internetverbindung" 
               TextColor="White" 
               FontSize="14" 
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               VerticalOptions="Center" 
               Padding="0,5"/>
        </Grid>

        <!-- Main content -->
        <RefreshView Grid.Row="1" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>
                <VerticalStackLayout>
                    <Grid RowDefinitions="Auto,Auto,*,Auto">
                        <!-- Custom Navigation Bar -->
                        <Grid Grid.Row="1" HeightRequest="60" BackgroundColor="LightGray">
                            <Label Padding="10"
                   TextColor="Black"
                   Text="Wilkommen in der Dashboard Page ! Hier sind Ihre allgemeine Statistiken in Zahlen f체r Sie angezeigt" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   FontAttributes="Italic"/>
                        </Grid>
                    </Grid>

                    <VerticalStackLayout Padding="20">
                        <Label Text="Eins채tze :" 
               TextColor="OrangeRed"
               FontSize="Large" 
               FontAttributes="Bold" 
               HorizontalOptions="Start" 
               Margin="0,0,0,10" />

                        <Grid ColumnSpacing="10" RowSpacing="10" 
                               Margin="0,30,0,10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                Padding="15"
                                BackgroundColor="#F0F0F0"
                                WidthRequest="150" 
                                HeightRequest="150"
                                StrokeShape="RoundRectangle 20,20,20,20"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Border.Shadow>
                                    <Shadow Brush="#80000000"
                                        Offset="0,4"
                                        Radius="8"
                                        Opacity="0.2"/>
                                </Border.Shadow>

                                <Border.Content>
                                    <StackLayout>
                                        <Label Text="Noch nicht fertige Eins채tze:"  TextColor="Red" Margin="-10" FontAttributes="Italic" FontSize="Subtitle"  HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand"  />
                                        <Label Text="{Binding IncompleteWorksCount}" FontSize="Large"
                                TextColor="Red"
                                FontAttributes="Bold" HorizontalOptions="Center"
                                VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                </Border.Content>
                            </Border>



                            <Border Grid.Column="1" 
                    Padding="15"
                    BackgroundColor="#F0F0F0"
                    WidthRequest="150" 
                    HeightRequest="150"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    Stroke="#E0E0E0"
                    StrokeThickness="1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                                <Border.Shadow>
                                    <Shadow Brush="#80000000"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.2"/>
                                </Border.Shadow>

                                <Border.Content>
                                    <StackLayout>
                                        <Label Text="Anzahl erstellte Eins채tze:"  
                               TextColor="SeaGreen"
                               Margin="-10" FontAttributes="Italic"
                               FontSize="Subtitle"  
                               HorizontalOptions="Center" 
                               HorizontalTextAlignment="Center"
                               VerticalOptions="CenterAndExpand"  />
                                        <Label Text="{Binding WorksCount}" FontSize="Large"
                                TextColor="SeaGreen"
                                FontAttributes="Bold" HorizontalOptions="Center"
                                VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                </Border.Content>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>